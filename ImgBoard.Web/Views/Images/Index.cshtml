@section scripts {
    @Scripts.Render("~/bundles/imagesjs")

    <script>
        $(document).ready(function () {
            //$('#masonry').imagesLoaded(function () {
            //    $('#masonry').masonry({
            //        // options
            //        itemSelector: '.masonry-item',
            //        columnWidth: '.masonry-item',
            //    });
            //});

            $('#yolo').imagesLoaded().progress(function () {
                $('.grid').masonry({
                    // set itemSelector so .grid-sizer is not used in layout
                    itemSelector: '.grid-item',
                    // use element for option
                    columnWidth: '.grid-sizer',
                    percentPosition: true
                });
            });
        });
    </script>
}



<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Images
        </h1>
        <ol class="breadcrumb">
            <li>@Html.ActionLink("All", "Index", "Images")</li>
            <li class="active">Three Columns list</li>
        </ol>
    </div>
</div>

<div id="yolo" class="grid">
    <!-- width of .grid-sizer used for columnWidth -->
    <div class="grid-sizer"></div>
    @foreach (var item in Model)
    {
        <div class="grid-item">
            <img src="http://localhost/imgBoardContent/@item.FileId.@item.FileExtension" />
        </div>
    }
</div>


